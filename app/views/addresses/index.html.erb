<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Zip</th>
    <th>place</th>
    <th>country</th>
    <th>state</th>
    <th>state code</th>
    <th>district</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.zip.to_s %></td>
    <td><%=  address.zip.to_s.to_region %></td>
	<td><%=  address.zip.to_s.to_region(:state => true) %></td>
	<td><%=  address.zip.to_s.to_region(:district => true) %></td>
	<td><%=  address.zip.to_s.to_region(:country => true) %></td>
	<td><%=  address.zip.to_s.to_region(:lat => true) %></td>
	<td><%=  address.zip.to_s.to_region(:log => true) %></td>
	<td><%=  address.zip.to_s.to_region(:state_code => true) %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Address', new_address_path %>
